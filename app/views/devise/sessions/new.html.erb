<div class="page_1" style="background-image: url('/assets/images/ocean.png'); center center >
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign in</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
    <table>
    <tr><td><%= f.label :email %>:</td><td><%= f.email_field :email, :autofocus => true, class: 'form-control' %></td></tr>
<!--</div> -->
<!--    <div class="form-group"> -->
      <tr><td><%= f.label :password %>:</td><td><%= f.password_field :password, class: 'form-control' %></td></tr>
<!--    </div> -->
<!--    <div class="form-group"> -->
      <tr><td><%= f.submit 'Sign in', :class => 'button right' %></td><td></td></tr>
<!--     </div> -->
<!--    <div class="form-group"> -->
      <% if devise_mapping.rememberable? -%>
        <tr><td><div class="checkbox"><%= f.check_box :remember_me %><%= f.label :remember_me %></td><td></td></tr>
        </div> 
      <% end -%>
<!--    </div> -->
<!--    <div class="form-group"> -->
      <%- if devise_mapping.recoverable? %>
      <tr><td><%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %></td><td></td></tr>
      <% end -%>
<!--     </div> -->
<!--    <div class="form-group"> -->

      <%- if devise_mapping.registerable? %>
      <tr><td><%= link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %></td><td></td></tr>
      <% end -%>
    </div>
  </table>
  <% end %>
</div>
</div>
