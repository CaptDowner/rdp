<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign in</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <table>
        <tr><td class='lbl'><%= f.label :email, 'Email: ' %></td><td><%= f.email_field :email, :autofocus => true, class: 'form-control' %></td></tr>
        <tr><td class='lbl'><%= f.label :password, 'Password: ' %></td><td><%= f.password_field :password, class: 'form-control' %></td></tr>
      </table>
    </div> 
        <p class='si-tags'><%= f.submit 'Sign in', :class => 'button' %></p>
    <% if devise_mapping.rememberable? -%>
      <p><div class="checkbox"><%= f.check_box :remember_me %><%= f.label :remember_me %></div></p>
    <% end -%>
    <%- if devise_mapping.recoverable? %>
      <p class='si-tags'><%= link_to "Forgot password?", new_password_path(resource_name), class: 'left' %></p>
    <% end -%>
    <%- if devise_mapping.registerable? %>
      <p class='si-tags'><%= link_to 'Sign up', new_registration_path(resource_name), class: 'left'  %></p>
    <% end -%>
    </table>
  </div>
  <% end %>
</div>
