}

.column {
  @extend .col-md-6;
  @extend .text-center;
  }
.form {
  @extend .col-md-6;
  }
.form-centered {
  @extend .col-md-6;
  @extend .text-center;
  }
.submit {
  @extend .btn;
  @extend .btn-primary;
  @extend .btn-lg;
}
.form-group {
  line-height:16px;
  margin: 0;
  padding: 5px 0 0 0;
}


// apply styles to HTML elements
// to make views framework-neutral
main {
  @extend .container;
  background-color: #eee;
  padding-bottom: 8px;
  width: 100%;
  margin-top: 51px; // accommodate the navbar
  padding-left: 36px;
}
section {
  @extend .row;
  margin-top: 20px;
  }

// Styles for form views
// using Bootstrap
// generated by the rails_layout gem
.authform {
  padding-top: 30px;
  max-width: 320px;
  margin: 0 auto;
}
.authform form {
  @extend .well;
  @extend .well-lg;
  padding-bottom: 40px;
  padding-left: 18px;
}
.authform .right {
  float: right !important;
}
.authform .button {
  @extend .btn;
  @extend .btn-primary;
}
.authform fieldset {
  @extend .well;
}

.authform.checkbox {
  padding: 0;
  margin-right:0;
  margin-left:0;
}
.authform.checkbox.label {
  text-align: left;
}
.checkbox.input#user_remember_me{
  text-align: left;
  margin-left: 0px;
}
#error_explanation {
  @extend .alert;
  @extend .alert-danger;
}
#error_explanation h2 {
  font-size: 16px;
}
.button-xs {
  @extend .btn;
  @extend .btn-primary;
  @extend .btn-xs;
}

input.checkbox {
  padding-left: 20px;
  margin-left: 14px;
}

input#user_remember_me {
  text-align: left;
  margin-left:2px;
}

