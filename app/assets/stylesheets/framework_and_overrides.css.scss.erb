// import the CSS framework
@import "bootstrap";

// make all images responsive by default
img {
  @extend .img-responsive;
  margin: 0 auto;
  }
// override for the 'Home' navigation link
.navbar-brand {
  font-size: inherit;
  }

// THESE ARE EXAMPLES YOU CAN MODIFY
// create your own classes
// to make views framework-neutral
body.users-index {
  background-image:url(<%= asset_path "ocean.png"%>);
}

body.user-new {
  background-image: url(<%= asset_path "beach.png"%>);
}

body.user-show {
  background-image: url(<%= asset_path "green_hills.png"%>);
}

body.sessions-new {
  background-image: url(<%= asset_path "ocean.png"%>);
}
body.registrations-new {
   background-image: url(<%= asset_path "ocean.png"%>);
}
body.visitors-index {
  background-image: url(<%= asset_path "green_hills_water.png"%>);
}
body.visitors-show {
  background-image: url(<%= asset_path "green_hills.png"%>);
}

body.visitors-edit {
